# ===========================================
# CleaniDoc Dashboard - Environment Configuration
# ===========================================

# ==== SUPABASE CONFIGURATION ====
# Your Supabase project URL
REACT_APP_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous/public key (safe to expose in client)
REACT_APP_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key-here

# ==== APPLICATION CONFIGURATION ====
# Application environment (development, staging, production)
REACT_APP_ENV=development

# Application name and version
REACT_APP_NAME=CleaniDoc Dashboard
REACT_APP_VERSION=1.0.0

# Base URL for the application
REACT_APP_BASE_URL=http://localhost:3000

# ==== API CONFIGURATION ====
# API base URL (if using external API)
REACT_APP_API_URL=https://api.cleanidoc.com

# API version
REACT_APP_API_VERSION=v1

# ==== FEATURES FLAGS ====
# Enable/disable features
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=false
REACT_APP_ENABLE_MAINTENANCE_MODE=false
REACT_APP_ENABLE_DEBUG_MODE=false

# ==== THIRD-PARTY SERVICES ====
# Sentry DSN for error reporting (optional)
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id

# Google Analytics tracking ID (optional)
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXX-X

# ==== FILE UPLOAD CONFIGURATION ====
# Maximum file size in bytes (5MB default)
REACT_APP_MAX_FILE_SIZE=5242880

# Allowed file types
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ==== LOCALIZATION ====
# Default language
REACT_APP_DEFAULT_LOCALE=de-DE

# Supported languages
REACT_APP_SUPPORTED_LOCALES=de-DE,en-US

# ==== PERFORMANCE CONFIGURATION ====
# Enable service worker
REACT_APP_ENABLE_SERVICE_WORKER=true

# Cache duration in seconds
REACT_APP_CACHE_DURATION=3600

# ==== DEVELOPMENT CONFIGURATION ====
# Enable React DevTools
REACT_APP_ENABLE_REACT_DEVTOOLS=true

# Enable Redux DevTools
REACT_APP_ENABLE_REDUX_DEVTOOLS=true

# Logging level (error, warn, info, debug)
REACT_APP_LOG_LEVEL=info

# ==== SECURITY CONFIGURATION ====
# JWT token expiration time in minutes
REACT_APP_JWT_EXPIRY=60

# Session timeout in minutes
REACT_APP_SESSION_TIMEOUT=30

# ==== EXPORT SYSTEM CONFIGURATION ====
# AWS S3 Configuration for Export Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
S3_BUCKET_NAME=cleanidoc-exports
# Optional: KMS Key for additional encryption
AWS_KMS_KEY_ID=

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
# Email settings
EXPORT_FROM_EMAIL=exports@cleanidoc.de
EXPORT_FROM_NAME=CleaniDoc Export System

# SFTP Configuration (optional)
SFTP_HOST=
SFTP_PORT=22
SFTP_USERNAME=
SFTP_PASSWORD=
SFTP_PRIVATE_KEY_PATH=

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_for_hmac_signatures

# PDF Generation
PUPPETEER_EXECUTABLE_PATH=
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox

# Export Settings
EXPORT_RETENTION_DAYS=730
PRESIGNED_URL_EXPIRY_HOURS=24
MAX_EXPORT_FILE_SIZE_MB=100

# Security for Export APIs
JWT_SECRET=your_jwt_secret_for_api_tokens
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW_MINUTES=15

# Cron Configuration
DAILY_EXPORT_CRON=0 2 * * *
CLEANUP_CRON=0 3 * * 0

# ==== CONTACT INFORMATION ====
# Support email
REACT_APP_SUPPORT_EMAIL=support@cleanidoc.com

# Company information
REACT_APP_COMPANY_NAME=CleaniDoc GmbH
REACT_APP_COMPANY_WEBSITE=https://cleanidoc.com

# ===========================================
# NOTES:
# 1. Copy this file to .env.local for local development
# 2. Update the values with your actual configuration
# 3. Never commit .env.local or any file containing real secrets
# 4. REACT_APP_ prefix is required for client-side access
# 5. Server-side secrets should NOT have REACT_APP_ prefix
# ===========================================